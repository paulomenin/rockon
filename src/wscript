#!/usr/bin/env python
# encoding: utf-8

sources = """
	main.c
	error.c
	config.c
	lcfg_static.c
	xmms_conn.c
	gui.c
	playback_cb.c
""".split()

libs = """
	ecore-evas
	elementary
	xmms2-client
	xmms2-client-ecore
"""

def configure(conf):
	conf.env.append_value('CFLAGS', '-Wall')
	conf.env.append_value('CFLAGS', '-O0')
	conf.env.append_value('CFLAGS', '-g')

	conf.check_tool('gcc')
	conf.check_tool('doxygen', tooldir='waf_tools')
	conf.find_program('edje_cc', var='EDJE_CC')
	
	for lib in libs.split():
		conf.check_cfg(package=lib, args='--cflags --libs')

def build(bld):
	
	bld.new_task_gen(
		features     = 'cc cprogram',
		source       = sources,
		target       = 'rockon',
		includes     = '.',
		install_path = None,
		uselib       = libs.upper().split()
	)

	bld.new_task_gen(
		features = 'doxygen',
		doxyfile = '../Doxyfile',
		install_to = None
	)

